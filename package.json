{
  "name": "hafiportrait",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "next dev --port 3000 -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:api": "vitest run tests/api --reporter=verbose",
    "test:api:watch": "vitest watch tests/api",
    "test:integration": "vitest run tests/integration --reporter=verbose",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "test:e2e:headed": "playwright test tests/e2e --headed",
    "test:mobile": "playwright test tests/mobile",
    "test:performance": "artillery run tests/performance/load-testing.yml",
    "test:performance:api": "vitest run tests/performance --reporter=verbose",
    "test:security": "vitest run tests/security --reporter=verbose",
    "test:all": "npm run test:api && npm run test:integration && npm run test:security",
    "test:setup": "tsx tests/setup.ts",
    "test:clean": "tsx -e \"import DatabaseTestHelper from './tests/utils/database-helpers'; DatabaseTestHelper.cleanTestData().then(() => process.exit(0))\"",
    "test:seed": "tsx -e \"import DatabaseTestHelper from './tests/utils/database-helpers'; DatabaseTestHelper.seedTestData().then(() => process.exit(0))\"",
    "test:ci": "npm run test:api && npm run test:integration && npm run test:security",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prepare": "husky install",
    "start:socket": "node server/socket-server.js",
    "start:production": "pm2 start ecosystem.config.js --env production",
    "start:dev:all": "concurrently \"npm run dev\" \"npm run start:socket\"",
    "stop:production": "pm2 stop ecosystem.config.js",
    "restart:production": "pm2 reload ecosystem.config.js",
    "logs:production": "pm2 logs",
    "deploy": "npm run build && pm2 reload ecosystem.config.js --env production"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/s3-request-presigner": "^3.478.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.22.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@tanstack/react-query": "^5.17.9",
    "@types/qrcode": "^1.5.6",
    "@types/sanitize-html": "^2.16.0",
    "@vercel/blob": "^2.0.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "csrf": "^3.1.0",
    "date-fns": "^3.6.0",
    "exif-reader": "^2.0.3",
    "file-type": "^21.1.1",
    "framer-motion": "^12.23.26",
    "isomorphic-dompurify": "^2.34.0",
    "jose": "^5.2.0",
    "lucide-react": "^0.294.0",
    "next": "^15.5.9",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.49.2",
    "react-hot-toast": "^2.6.0",
    "redis": "^4.6.12",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "sonner": "^2.0.7",
    "swiper": "^12.0.3",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/redis": "^4.0.10",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.15",
    "artillery": "^2.0.27",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
